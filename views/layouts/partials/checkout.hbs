<style>
    .text-style {
        color: #ef5350;
    }
    .selected {
    	border: 2px solid #ef5350;
    }
	.checkout-input {
	    border: .5px solid grey !important;
	    border-radius: 2px !important;
		margin-top: 10px !important;
	}
	.checkout-input ::placeholder {
		text-align: right;
	}
	.input-field {
		margin-top: 0;
		margin-bottom: 0;
	}
	[type="checkbox"].filled-in:checked + span:not(.lever)::after {
		background-color: #ef5350 !important;
		border: #ef5350 !important;
	}
	.text-align-right {
		text-align: right;
    }
    .check {
		position: relative;
		top: 35px;
		z-index: 5;
		right: 5px;
    }
    .check-box {
		margin-left: 10px;
		margin-top: 5px;
	}
    .vertical-align {
	    display: flex;
    	align-items: center;
    }
</style>
<div class="container">
	<div class="section row">
		<div class="modal-close btn-flat left" onClick="document.getElementById('notSelectedCard').appendChild(
								    			document.getElementById('card'+selectedValue)
								  			);
								  			document.getElementById('card'+selectedValue).classList.remove('selected');">
			<i class="fa fa-times-circle"></i>
			<span>Close</span>
		</div>
		<div class="right rtl">
			<h4>Sponser "Page Name"</h4>
			<h6 class="right rtl">Message goes here</h6>
		</div>
	</div>
    <div class="divider"></div>
    <div class="section row">
    	<div class="col s4">
    		<div>
    			<div class="row">
    				<h6 class="right">Artist Name</h6>
    			</div>
    			<div>
    				<img src={{data.profile}}>
    			</div>
    			<div class="row">
    				<h6 class="right">Page Name Goes In This Space</h6>
    			</div>
    		</div>
    		<div class="divider"></div>
    		<div class="row">
    			<h6 class="right">Your Choosen Sponsorship Package</h6>
    		</div>
    		<div id="selectedCard">
    			<div class="text-align-right check">
    				<i class="material-icons text-style" id="checkmark">check_circle</i>
    			</div>
		    </div>
			<div class="divider"></div>
			<div class="row">
    			<h6 class="right">Other Sponsorship Packages</h6>
    		</div>
    		<div id="notSelectedCard">
				{{#each data.rewards}}
					<div class="card" id='card{{@index}}'>
				        <div class="card-content">
				        	<div class="section">
					        	<h6 class="left">{{this.price}}</h6>
					        	<h6 class="right">{{this.title}}</h6>
					        </div>
					        <div class="section">
					        	<div class="card-image">
						        	<img src={{this.img}}>
						        </div>
						        <br>
						        <p class="rtl">{{this.description}}</p>
					        </div>
				        </div>
				    </div>
				{{/each}}
			</div>
		</div>
		<div class="col s6 right">
			<div class="section">
				<div class="row">
					<h6 class="right">Payment Details</h6>
				</div>
				<div class="row">
					<div class="col s12">
						<span class="right">Card Number</span>
						<div class="input-field">
			                <input class="checkout-input rtl" id="card-number" placeholder="Card Number" type="text" required>
			            </div>
		            </div>
		        </div>
	            <div class="row">
	            	<div class="col s6">
		            	<i class="material-icons left">info_outline</i>
		            	<span class="right">CVV Code</span>
			            <div class="input-field">
			                <input class="checkout-input rtl" id="card-number" placeholder="XXX" type="text" required>
			            </div>
			        </div>
			        <div class="col s6">
			            <span class="right">Expiry Date</span>
			            <div class="input-field">
			                <input class="checkout-input rtl" id="card-number" placeholder="MM/YY" type="text" required>
			            </div>
			        </div>
		        </div>
		    </div>
		    <div class="divider"></div>
		    <div class="section">
		    	<p class="vertical-align">
			    	<span>I want the amount I donated to remain anonymous</span>
			    	<label class="check-box">
				        <input type="checkbox" class="filled-in" />
				        <span></span>
				    </label>
				</p>
		    </div>
		    <div class="divider"></div>
		    <div class="section right">
	        	<button class="btn-large red lighten-1 waves-effect waves-light modal-trigger" href="#modalCheckout">Confirm and Sponsor</button>
	        </div>
		</div>
    </div>
</div>