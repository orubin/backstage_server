		    		<div class="right">
		    			<a class="btn-large waves-effect waves-light" style="background-color: rgba(0, 0, 0, 0); border: 1px solid white;" href="/explore">Explore Artists</a>
		    			<a class="btn-large white waves-effect blue-grey-text text-darken-4 modal-trigger" href="#modalSignup">Sign up</a>
		    		</div>
		    	</div>
		    	<div class="center col s6">
		    	</div>
		    </div>
		</div>
		{{>recommended}}
		<div style="background-image: url('../band.jpg');background-size: 100%;">
		    <div class="center" style="margin:10%;">
				<h3 class="white-text" style="text-shadow: 1px 1px 2px black; margin:3%;">Start Getting Paid Today</h3>
				<button class="thick btn-large red-text text-lighten-1 white waves-effect waves-light modal-trigger" href="#modalSignup">Sign Up Today</button>
			</div>
		</div>
		<div id="modalSignup" class="modal">
        	{{> signup registrationType=true }}
    	</div>
    	<div id="msgModal" class="modal msgModal">
    		<h5 class="center">{{msg}}</h5>
    		<div class="center"><a class="waves-effect waves-light btn red lighten-1 modal-close">Close</a></div>
    	</div>
	{{/if}}
    {{> footer}}
{{> endfile}}