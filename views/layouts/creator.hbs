<style>
	.text-style {
		color: #ef5350;
	}
	.raised-progress {
		background-color: #ef5350;
	}
	.cover-image {
		width: 100%;
		height: 40%;
		z-index: -1;
		position: absolute;
	}
	.container {
		width: 80%;
	}
	.tabs .tab a.active {
        color: #ef5350;
    }
    .tabs .tab a {
        color: #424242;
    }
    .tab-content {
    	margin-left: 30%;
    }
    .tab-header {
    	font-size: 120%;
    }
    .collapse-section, .package-info {
    	margin-top: 15%;
    }
    .left-section {
    	float:left;
    	width: 30%;
    	margin-left: -5%;
    }
    .payment-selector select {
        font-size: 16px;
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
        background-color: transparent;
        height: 45px;
        border: 0px;

        padding: 10px;
        margin: 8px 0;
        border-bottom: 1px solid black !important;
    }
    .payment-selector:after {
        content: '\f0dd';
        font: normal normal normal 15px/1 FontAwesome;
        float:left;
        margin-top: -14%;
        margin-left: 8%;
    }
    .currency-selector {
    	width: 30%;
    	float: left;
    }
    .pay-total {
    	float: right;
    }

	.payment-slider input[type=range]::-webkit-slider-thumb {
		background-color: #ef5350;
	}
	.payment-slider input[type=range]::-moz-range-thumb {
		background-color: #ef5350;
	}
	.payment-slider input[type=range]::-ms-thumb {
		background-color: #ef5350;
	}

	/***** These are to edit the thumb and the text inside the thumb *****/
	.payment-slider input[type=range] + .thumb {
		background-color: #dedede;
	}
	.payment-slider input[type=range] + .thumb.active .value {
		color: #ef5350;
	}
</style>
